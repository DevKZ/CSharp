<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- コントロール別Stretch比較-->
        <Image Source="/MaterialDesignColors.Icon.png"/>
        <materialDesign:PackIcon Kind="About" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <TextBox Height="23" Margin="10,10,10,0" Text="TextBox：コントロールの幅は自動調整。フォントの大きさは変わらない" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="10,50,10,0" Text="Tmage：コントロールの幅は自動調整。画像も変化" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="10,90,10,0" Text="materialDesign:PackIcon：コントロールの幅は自動調整。画像は変化しない" VerticalAlignment="Top"/>
    </Grid>
</Window>
