<Window x:Class="WpfAppXaml3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppXaml3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Center" VerticalAlignment="Center" MediaOpened="mediaElement_MediaOpened" UnloadedBehavior="Manual"/>
        <Button x:Name="BTNTEST" Content="Click Me!!" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" Width="200" Height="100" Click="Button_Click" BorderBrush="{x:Null}"/>
        <Button Content="OpenFile" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_1"/>
    </Grid>
</Window>
